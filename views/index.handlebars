<div class="jumbotron text-center">
  <h1>Bob's Burgers</h1>
</div>

<div id="main">
  <div id="uneaten">
    <h2>Eat Me!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{this.burger_name}} <button data-id={{this.id}} class="uneaten btn btn-danger">Devour!</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div id="devoured">
    <h2>Devoured Burgers!</h2>
    <div id="devoured">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{this.burger_name}} <button data-id={{this.id}} class="devoured btn btn-danger">Delete</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div id="add-burger">
    <h2>Add a Burger!</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger-name">
      </div>
      <button type="submit" class="btn btn-danger">Add Burger</button>
    </form>

  </div>

</div>

    

  
    

